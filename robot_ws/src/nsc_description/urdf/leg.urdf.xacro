<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="leg" params="side length width height mass pos_x pos_y pos_z">
        <link name="${side}_leg_link">
            <xacro:if value="${side == 'right'}">
                <visual>
                    <origin xyz="0.0 0.0 0.0" rpy="0 0 ${-pi/2}"/>
                    <geometry>
                        <mesh filename="file://$(find nsc_description)/urdf/model/right_leg2.stl" scale="0.8 0.8 0.8"/>
                        <!-- <box size="${length} ${width} ${height}"/> -->
                    </geometry>
                </visual>
            </xacro:if>
            <xacro:if value="${side == 'left'}">
                <visual>
                    <origin xyz="-0.01 0.0 0.0" rpy="0 0 ${-pi/2}"/>
                    <geometry>
                        <mesh filename="file://$(find nsc_description)/urdf/model/left_leg2.stl" scale="0.8 0.8 0.8"/>
                        <!-- <box size="${length} ${width} ${height}"/> -->
                    </geometry>
                </visual>
            </xacro:if>

            <collision>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <box size="${length} ${width} ${height}"/>
                </geometry>
            </collision>

            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <inertia ixx="${(1/12) * mass * ((width * width) + (height * height))}" ixy="0.0" ixz="0.0"
                            iyy="${(1/12) * mass * ((length * length) + (height * height))}" iyz="0.0"
                            izz="${(1/12) * mass * ((length * length) + (width * width))}"/>
            </inertial>
        </link>
        
        <joint name="${side}_leg_joint" type="revolute">
            <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
            <parent link="${side}_top_leg_link3"/>
            <child link="${side}_leg_link"/>
            <axis xyz="1 0 0" />
            <limit lower="${-pi}" upper="0" effort="-1" velocity="-1"/>
        </joint>
    </xacro:macro>
</robot>