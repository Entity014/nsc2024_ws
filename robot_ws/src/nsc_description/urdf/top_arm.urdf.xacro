<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="top_arm" params="side length width height mass pos_x pos_y pos_z lower_limit upper_limit">
        <link name="${side}_top_arm_link1">
            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <inertia ixx="${(1/12) * mass * ((width * width) + (height * height))}" ixy="0.0" ixz="0.0"
                            iyy="${(1/12) * mass * ((length * length) + (height * height))}" iyz="0.0"
                            izz="${(1/12) * mass * ((length * length) + (width * width))}"/>
            </inertial>
        </link>
        <link name="${side}_top_arm_link2">
            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <inertia ixx="${(1/12) * mass * ((width * width) + (height * height))}" ixy="0.0" ixz="0.0"
                            iyy="${(1/12) * mass * ((length * length) + (height * height))}" iyz="0.0"
                            izz="${(1/12) * mass * ((length * length) + (width * width))}"/>
            </inertial>
        </link>
        <link name="${side}_top_arm_link3">
            <visual>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <box size="${length} ${width} ${height}"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <box size="${length} ${width} ${height}"/>
                </geometry>
            </collision>

            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <inertia ixx="${(1/12) * mass * ((width * width) + (height * height))}" ixy="0.0" ixz="0.0"
                            iyy="${(1/12) * mass * ((length * length) + (height * height))}" iyz="0.0"
                            izz="${(1/12) * mass * ((length * length) + (width * width))}"/>
            </inertial>
        </link>

        <joint name="${side}_top_arm_joint1" type="revolute">
            <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="${side}_top_arm_link1"/>
            <axis xyz="0 0 1" />
            <limit lower="${-pi/2}" upper="${pi/2}" effort="-1" velocity="-1"/>
        </joint>
        <joint name="${side}_top_arm_joint2" type="revolute">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="${side}_top_arm_link1"/>
            <child link="${side}_top_arm_link2"/>
            <axis xyz="0 1 0" />
            <limit lower="${lower_limit}" upper="${upper_limit}" effort="-1" velocity="-1"/>
        </joint>
        <joint name="${side}_top_arm_joint3" type="revolute">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="${side}_top_arm_link2"/>
            <child link="${side}_top_arm_link3"/>
            <axis xyz="1 0 0" />
            <limit lower="${-pi/2}" upper="${pi}" effort="-1" velocity="-1"/>
        </joint>
    </xacro:macro>
</robot>